{
  "compilerOptions": {
    "module": "commonjs",
    "types": ["jest"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./build",
    "paths": {
      "@services/*": ["./src/services/*"],
      "@tests/*": ["./tests/*"]
    }
  },
  "exclude": ["node_modules", "build"]
}
